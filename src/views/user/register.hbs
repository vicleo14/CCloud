<div class="container p-4">
    <div class="div">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/user/register" method="POST" id="formReg">
                        <div class="form-group">
                            <input type="text" class="form-control" name="curp" placeholder="CURP(18 caracteres)" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name" >
