<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">User</th>
      <th scope="col">File</th>
      <th scope="col">Date</th>
      <th scope="col">Key Type</th>
      <th scope="col">Status</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each requests}}    
    <tr>
      <td>{{this.user}}</td>
      <td>{{this.file}}</td>
      <td>{{this.date}}</td>
      <td>{{this.keyType}}</td>
      <td>{{this.state}}</td>
      <td><a class="btn btn btn-outline-success" href="get-key?id={{this.idFile}}&type={{this.keyTypeNum}}" role="button">Get key</a></td>
      <td><a class="btn btn btn-outline-warning" href="request-key?id={{this.idFile}}" role="button">Key delivered</a></td>
    </tr>
    {{/each}}
    
  </tbody>
</table>

